<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Bundle Identity -->
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>ScanFlow</string>
    <key>CFBundleDisplayName</key>
    <string>ScanFlow</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    
    <!-- System Requirements -->
    <key>LSMinimumSystemVersion</key>
    <string>14.0</string>
    <key>NSPrincipalClass</key>
    <string>NSApplication</string>
    
    <!-- App Metadata -->
    <key>NSHumanReadableCopyright</key>
    <string>Copyright Â© 2024-2026 ScanFlow. All rights reserved.</string>
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.productivity</string>
    <key>CFBundleIconFile</key>
    <string>AppIcon</string>
    
    <!-- Background Mode Support -->
    <key>LSUIElement</key>
    <false/>
    <key>NSSupportsAutomaticTermination</key>
    <false/>
    <key>NSSupportsSuddenTermination</key>
    <false/>
    
    <!-- Privacy Descriptions -->
    <key>NSCameraUsageDescription</key>
    <string>ScanFlow uses the camera for document capture when scanning directly from your device.</string>
    <key>NSLocalNetworkUsageDescription</key>
    <string>ScanFlow needs local network access to discover network scanners and enable remote scanning from iOS devices.</string>
    <key>NSContactsUsageDescription</key>
    <string>ScanFlow can automatically create contacts from scanned business cards and documents containing contact information.</string>
    <key>NSCalendarsUsageDescription</key>
    <string>ScanFlow can automatically create calendar events from scanned documents containing dates and appointments.</string>
    
    <!-- Bonjour Services for Scanner Discovery -->
    <key>NSBonjourServices</key>
    <array>
        <string>_scanflow._tcp</string>
        <string>_scanner._tcp</string>
        <string>_uscan._tcp</string>
        <string>_uscans._tcp</string>
        <string>_eSCL._tcp</string>
        <string>_eSCLS._tcp</string>
        <string>_ipp._tcp</string>
        <string>_ipps._tcp</string>
        <string>_pdl-datastream._tcp</string>
        <string>_privet._tcp</string>
    </array>
    
    <!-- File Handling -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>PDF Document</string>
            <key>CFBundleTypeRole</key>
            <string>Viewer</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>com.adobe.pdf</string>
            </array>
        </dict>
        <dict>
            <key>CFBundleTypeName</key>
            <string>Image</string>
            <key>CFBundleTypeRole</key>
            <string>Viewer</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.image</string>
            </array>
        </dict>
    </array>
    
    <!-- Exported UTIs -->
    <key>UTExportedTypeDeclarations</key>
    <array/>
    
    <!-- Imported UTIs -->
    <key>UTImportedTypeDeclarations</key>
    <array/>
</dict>
</plist>
